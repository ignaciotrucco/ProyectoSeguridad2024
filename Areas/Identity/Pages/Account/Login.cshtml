@page
@model LoginModel

@{
  ViewData["Title"] = "Iniciar Sesión";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<!-- Card Login -->
<div id="main-wrapper" class="container">
  <div class="row justify-content-center">
    <div class="col-xl-10">
      <div class="card border-0 formLogin">
        <div class="card-body p-0">
          <div class="row no-gutters">
            <div class="col-lg-6">
              <div class="p-5 cardBody">
                <div style="text-align: center;">
                <img src="~/img/STVA_amarillo.png" class="tituloSTVA">
                </div>
                <hr>
                <h6 class="mb-0">¡Bienvenido de nuevo!</h6>
                <p class="text-muted mt-2 mb-5">Ingresa tu email y contraseña.</p>
                <form id="account" method="post">
                  <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                  <div class="form-floating mb-3">
                    <input type="email" class="form-control" asp-for="Input.Email" autocomplete="username"
                      aria-required="true" id="floatingInput" placeholder="name@example.com">
                    <label asp-for="Input.Email" for="floatingInput">Correo Electrónico</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                  </div>
                  <div class="form-floating mb-3">
                    <input type="password" class="form-control" asp-for="Input.Password" autocomplete="current-password"
                      aria-required="true" id="floatingPassword" placeholder="Password">
                    <label asp-for="Input.Password" for="floatingPassword">Contraseña</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                  </div>
                  <div class="d-grid">
                    <button id="login-submit" class="btn btn-lg btn-login text-uppercase fw-bold mb-2"
                      type="submit">Iniciar Sesión</button>
                  </div>
                </form>
              </div>
            </div>
            <div class="col-lg-6 d-none d-lg-inline-block">
              <div class="account-block rounded-right">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Card ¿CÓMO FUNCIONA NUESTRO SISTEMA? -->
<div class="card m-4">
  <div class="card-header encabezadoCard">
    <div class="m-3 text-center">
      <h1>¿CÓMO FUNCIONA NUESTRO SISTEMA?</h1>
    </div>
  </div>
  <div class="card-body cardSistema">
    <div class="container-fluid m-3">
      <div class="row justify-content-center g-2 text-center">
        <!-- Imagen permisos administrador-->
        <div class="col-md-6 col-12 d-flex justify-content-center mb-3">
          <div class="card tarjeta h-100">
            <img class="imgZoom" src="/img/cardHome_1.png">
          </div>
        </div>
        <!-- Imagen permisos empleado y cliente-->
        <div class="col-md-6 col-12 d-flex justify-content-center mb-3">
          <div class="card tarjeta h-100">
            <img class="imgZoom" src="/img/cardHome_2.png">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}