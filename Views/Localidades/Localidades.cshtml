    ViewData["Title"] = "Localidades";
}

<link rel="stylesheet" href="~/css/abm.css" asp-append-version="true" />

<div class="card m-3">
    <div class="card-body">
        <div class="container mt-3">
            <div class="row">
                <div class="col-auto me-auto">
                    <h1 class="display-4 hover-icon">Localidades <i class="fas fa-map-location-dot icon"></i></h1>
                </div>
                <div class="col-auto">
                    <button class="btn btnImprimir mt-3">
                        <i class="fa-solid fa-download"></i>
                        <span class="btn-text">Imprimir</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

