@{
    ViewData["Title"] = "Provincias";
}

<link rel="stylesheet" href="~/css/abm.css" asp-append-version="true" />

<!-- Encabezado ABM -->
<div class="card m-4">
    <div class="card-body">
        <div class="mt-3">
            <div class="row">
                <div class="col-auto me-auto">
                    <h1 class="hover-icon">PROVINCIAS <i class="fas fa-location-dot icon"></i>
                    </h1>
                </div>
                <div class="col-auto">
                    <button class="btn btnImprimir mt-2" onclick="ImprimirTablaProvincias()">
                        <i class="fa-solid fa-download"></i>
                        <span class="btn-text">Imprimir</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalProvincias" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
    id="staticBackdrop" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content centrarModalCelular">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal"></h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="d-flex">
                        <p class="campoObligatorio">Los campos marcados con un asterisco (<span
                                class="asterisco">*</span>) son obligatorios</p>
                        @* <p class="asterisco" style="padding-left:0 !important;padding-right: 0 !important;">*</p>
                        <p class="campoObligatorio">) son obligatorios </p> *@
                    </div>
                    <form>
                        <div class="col-md-10 mb-10" style="width: auto !important;">
                            <input type="hidden" id="ProvinciaID">
                            <label for="NombreProvincia" class="form-label d-flex">Nombre<p class="asterisco">*</p>
                            </label>
                            <input type="text" class="form-control" id="NombreProvincia"
                                style="text-transform:uppercase">
                            <span id="NombreError" class="textoError"></span>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btnGuardar" onclick="GuardarRegistros()">Guardar</button>
                <button type="button" class="btn btnCancelar" data-bs-dismiss="modal"
                    onclick="LimpiarModal()">Cancelar</button>
            </div>
        </div>
    </div>
</div>

<!-- Tabla -->
<div class="card m-4">
    <div class="card-header">
        <div class="row">
            <div class="col-auto">
                <div class="input-group m-2">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-magnifying-glass-location icon"></i></span>
                    <input type="text" id="inputBusqueda" class="form-control inputBusqueda"
                        placeholder="Buscar por nombre..." style="text-transform:uppercase">
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
            <table class="table table-striped mt-1" id="imprimir-tabla">
                <thead>
                    <tr>
                        <th scope="col" style="text-align: center">NOMBRE</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody id="tbody-provincias"></tbody>
            </table>
        </div>
    </div>
</div>

<!-- Boton Modal -->
<div class="btnAgregar">
    <button type="button" class="btn btn-secondary btn-circle btn-lg d-flex" style="padding-bottom: 2px;" title="Agregar" data-bs-toggle="modal"
        data-bs-target="#modalProvincias" data-bs-target="#staticBackdrop" onclick="NuevoRegistro()">
        <i class="fa-solid fa-plus mt-1"></i><h5 style="margin-left: 3px; padding-top: 1px;" class="textBtnAgregar">Nueva Provincia</h5>
    </button>
</div>

@section Scripts {
    <script src="~/js/provincias-1.0.0.js"></script>
    <script src="~/js/impresiones.js"></script>
}