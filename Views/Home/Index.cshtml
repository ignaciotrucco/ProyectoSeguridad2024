@{
  ViewData["Title"] = "Inicio";
}

<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

<!-- Card BIENVENIDO DE NUEVO-->
<div class="card m-4">
  <div class="card-header">
    <div class="m-3">
      <h1>¡BIENVENIDO DE NUEVO, @ViewBag.NombreTitulo!</h1>
    </div>
  </div>
  <div class="card-body">
    <div class="carFondo m-3">
      <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
          <!-- Botones amarillos carousel-->
          <button type="button" data-bs-target="#carouselExampleFade" data-bs-slide-to="0" class="active"
            aria-current="true" aria-label="Slide 1"></button>
          <button type="button" data-bs-target="#carouselExampleFade" data-bs-slide-to="1"
            aria-label="Slide 2"></button>
          <button type="button" data-bs-target="#carouselExampleFade" data-bs-slide-to="2"
            aria-label="Slide 3"></button>
          <button type="button" data-bs-target="#carouselExampleFade" data-bs-slide-to="3"
            aria-label="Slide 4"></button>
          <button type="button" data-bs-target="#carouselExampleFade" data-bs-slide-to="4"
            aria-label="Slide 5"></button>
        </div>
        <!-- Imagenes carousel-->
        <div class="carousel-inner">
          <div class="carousel-item active" data-bs-interval="7000">
            <img src="/img/STVAguardia_1_con_texto.png" class="d-block w-100 imgZoom">
          </div>
          <div class="carousel-item" data-bs-interval="7000">
            <img src="/img/STVAguardia_2_con_texto.png" class="d-block w-100 imgZoom">
          </div>
          <div class="carousel-item" data-bs-interval="7000">
            <img src="/img/STVAguardia_3_con_texto.png" class="d-block w-100 imgZoom">
          </div>
          <div class="carousel-item" data-bs-interval="7000">
            <img src="/img/STVAguardia_4_con_texto.png" class="d-block w-100 imgZoom">
          </div>
          <div class="carousel-item" data-bs-interval="7000">
            <img src="/img/STVAguardia_5_con_texto.png" class="d-block w-100 imgZoom">
          </div>
        </div>
        <!-- Botones "siguiente - anterior" carousel invisibles-->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
        </button>
      </div>
    </div>
  </div>
</div>

<hr>

<!-- Card ¿CÓMO FUNCIONA NUESTRO SISTEMA?-->
<div class="card m-4">
  <div class="card-header">
    <div class="m-3">
      <h1>¿CÓMO FUNCIONA NUESTRO SISTEMA?</h1>
    </div>
  </div>
  <div class="card-body cardSistema">
    <div class="container-fluid m-3">
      <div class="row col-md-12 g-2 cardResponsivas">
        <!-- Imagen permisos administrador-->
        <div>
          <div class="card tarjeta h-100">
            <img class="imgZoom" src="/img/cardHome_1.png">
          </div>
        </div>
        <!-- Imagen permisos empleado y cliente-->
        <div>
          <div class="card tarjeta h-100">
            <img class="imgZoom" src="/img/cardHome_2.png">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>