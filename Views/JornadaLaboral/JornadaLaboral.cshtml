@{
    ViewData["Title"] = "Jornada Laboral";
}

<link rel="stylesheet" href="~/css/abm.css" asp-append-version="true" />

<div class="card m-4">
    <div class="card-body">
        <div class="mt-3">
            <div class="row">
                <div class="col-auto me-auto">
                    <h1 class="hover-icon">Jornada Laboral <i class="fas fa-users icon"></i></h1>
                </div>
                @* <div class="col-auto">
                <button class="btn btnImprimir mt-2" onclick="ImprimirTablaEmpresas()">
                <i class="fa-solid fa-download"></i>
                <span class="btn-text">Imprimir</span>
                </button>
                </div> *@
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-7">
        <div class="card m-2">
            <div class="card-header">
                <div class="row">
                    <div class="col-auto me-auto">
                        <div class="input-group m-2">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-regular fa-user"></i></span>
                            <input type="text" id="inputBusqueda" class="form-control inputBusqueda"
                                placeholder="Buscar..." style="text-transform:uppercase">
                        </div>
                    </div>
                    <div class="col-auto">
                        <!-- Boton modal -->
                        <div class="boton-normal">
                            <button type="button" class="btn btn-secondary btn-circle btn-lg" title="Agregar"
                                data-bs-toggle="modal" data-bs-target="#modalJornada" data-bs-target="#staticBackdrop"
                                onclick="NuevoRegistro()">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped mt-1" id="imprimir-tabla">
                        <thead>
                            <tr>
                                <th scope="col" style="text-align: center">CLIENTE</th>
                                <th scope="col" style="text-align: center">LUGAR</th>
                                <th scope="col" style="text-align: center">ENTRADA</th>
                                <th scope="col" style="text-align: center">SALIDA</th>
                                <th scope="col" style="text-align: center">DIAS</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody id="tbody-empresas"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <div class="card m-2">
            <div class="card-header">
                <div class="row">
                    <div class="col-auto">
                        <div class="input-group m-2">
                            <span class="input-group-text" id="basic-addon1"><i class="fa-regular fa-user"></i></span>
                            <input type="text" id="inputBusqueda" class="form-control inputBusqueda"
                                placeholder="Buscar..." style="text-transform:uppercase">
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped mt-1" id="imprimir-tabla">
                        <thead>
                            <tr>
                                <th scope="col" style="text-align: center">EMPLEADO</th>
                                <th scope="col" style="text-align: center">JORNADA</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody id="tbody-empresas"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalJornada" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
    id="staticBackdrop" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="tituloModal"></h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="d-flex">
                        <p class="campoObligatorio">Los campos marcados con un asterisco (<span
                                class="asterisco">*</span>) son obligatorios <b>|</b> Click en <i
                                style="color: rgb(48, 126, 235);" class="fa-solid fa-circle-info"></i> para más
                            información.</p>
                    </div>
                    <form>
                        <div class="row">
                            <div class="col-md-6 mb-2">
                                <input type="hidden" id="JornadaID">
                                <label for="Cliente" class="form-label d-flex">Cliente<p class="asterisco">*
                                    </p></label>
                                <input type="text" class="form-control" id="Cliente" style="text-transform:uppercase">
                                <span id="razonSocialError" class="textoError"></span>
                            </div>
                            <div class="col-md-6 mb-2">
                                <label for="Lugar" class="form-label d-flex">Lugar<p class="asterisco">*</p>
                                </label>
                                <input type="text" class="form-control" id="Lugar" style="text-transform:uppercase">
                                <span id="domicilioEmpresaError" class="textoError"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 mb-2">
                                <label for="HsEntrada" class="form-label d-flex">Entrada<p class="asterisco">*</p>
                                    <div class="question-icon" onclick="openModalCuit()">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </div>
                                </label>
                                <input type="time" class="form-control" id="HsEntrada">
                                <span id="cuitError" class="textoError"></span>
                            </div>
                            <div class="col-md-4 mb-2">
                                <label for="HsSalida" class="form-label d-flex">Sálida<p class="asterisco">*</p>
                                    <div class="question-icon" onclick="openModalTel()">
                                        <i class="fa-solid fa-circle-info"></i>
                                    </div>
                                </label>
                                <input type="time" class="form-control" id="HsSalida">
                                <span id="telefonoEmpresaError" class="textoError"></span>
                            </div>
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="checkboxPrincipal">
                                    <label class="form-check-label">
                                        Dias Laborables
                                    </label>
                                </div>
                            </div>

                            <!-- Campo de fecha especial visible por defecto -->
                            <div id="fechaEspecial" class="mb-3">
                                <label class="form-label">Día Especial:</label>
                                <input type="date" class="form-control" id="fechaEspecialInput">
                            </div>

                            <!-- Checkboxes ocultos -->
                            <div id="checkboxsAdicionales" class="mb-3" style="display: none;">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="lunes">
                                    <label class="form-check-label" for="lunes">
                                        LUNES
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="martes">
                                    <label class="form-check-label" for="martes">
                                        MARTES
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="miercoles">
                                    <label class="form-check-label" for="miercoles">
                                        MIERCOLES
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="jueves">
                                    <label class="form-check-label" for="jueves">
                                        JUEVES
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="viernes">
                                    <label class="form-check-label" for="viernes">
                                        VIERNES
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="sabado">
                                    <label class="form-check-label" for="sabado">
                                        SÁBADO
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="domingo">
                                    <label class="form-check-label" for="domingo">
                                        DOMINGO
                                    </label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btnGuardar" onclick="GuardarEmpresa()">Guardar</button>
                <button type="button" class="btn btnCancelar" data-bs-dismiss="modal"
                    onclick="LimpiarModal()">Cancelar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/jornada.js"></script>
}