@{
    ViewData["Title"] = "Devoluciones";
}
<link rel="stylesheet" href="~/css/carganovedades.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/abm.css" asp-append-version="true" />

@{
    ViewData["Title"] = "Carga de Novedades";
}
<link rel="stylesheet" href="~/css/carganovedades.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/abm.css" asp-append-version="true" />

<div class="card m-4">
    <div class="card-body">
        <div class="mt-3">
            <div class="row">
                <div class="col-auto me-auto">
                    <h1 class="hover-icon">DEVOLUCIONES <i class="fas fa-comments icon"></i></h1>  
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tabla -->
<div class="card m-4">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col-auto">
                <div class="ms-2">
                        <label for="personaID" class="form-label text-dark labelFiltro labelFiltroAncho">Filtra por usuario</label>
                        @Html.DropDownList("PersonaID", null, htmlAttributes: new
                            {
                                @class = "form-control filtro",
                                @onchange = "VistaDevolucion()"
                            })
                    </div>
            </div>
        </div>
    </div>

<div class="card-body">
    <div class="table-responsive">
        <table style="width: 100%;">
            <tbody id="vistaDevoluciones">
            </tbody>
        </table>
    </div>
</div>

<div class="btnAgregar">
    <a href="~/Devoluciones/NuevaDevolucion" class="btn btn-secondary btn-circle btn-lg d-flex" style="padding-bottom: 2px;" title="Agregar">
        <i class="fa-solid fa-plus mt-1"></i>
        <h5 style="margin-left: 3px; padding-top: 1px;" class="textBtnAgregar">Nueva Devoluci√≥n</h5>
    </a>
</div>

@section Scripts {
    <script src="~/js/devoluciones-1.0.0.js"></script>
}
