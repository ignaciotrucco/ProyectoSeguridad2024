@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoSeguridad2024</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoSeguridad2024.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css" />
</head>
    <body>

@if (SignInManager.IsSignedIn(User))
{
        <div class="d-flex" id="wrapper">
            @* <!-- Sidebar--> *@
            <div class="border-end bgLayout" id="sidebar-wrapper">
                
                <div class="list-group list-group-flush">
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 text-dark" href="~/Home/Index"><i class="fa-solid fa-house"></i> - Home</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 text-dark" href="~/Provincias/Provincias"><i class="fa-solid fa-house"></i> - Provincias</a>
                    @* <a class="list-group-item list-group-item-action list-group-item-light p-3 text-dark" href="#!">Shortcuts</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 text-dark" href="#!">Overview</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 text-dark" href="#!">Events</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 text-dark" href="#!">Profile</a>
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 text-dark" href="#!">Status</a> *@
                </div>
            </div>
            @* <!-- Page content wrapper--> *@
            <div id="page-content-wrapper">
                @* <!-- Top navigation--> *@
                <nav class="navbar navbar-expand-lg navbar-light bgLayout border-bottom">
                    <div class="container-fluid">
                        <button class="btn" id="sidebarToggle"><i class="fa-solid fa-bars"></i></button>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                        <a class="navbar-brand mx-5">*nombre y logo*</a>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                                <partial name="_LoginPartial" />
                            </ul>
                        </div>
                    </div>
                </nav>
                    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
            </div>
        </div>
}
else
{
            <div id="page-content-wrapper">
                    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
            </div>
}

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/layout.js" asp-append-version="true"></script>
    <script src="~/fontawesome/js/all.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
