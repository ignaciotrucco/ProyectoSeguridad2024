@{
    ViewData["Title"] = "Historial de Fichajes";
}

<link rel="stylesheet" href="~/css/abm.css" asp-append-version="true" />

<!-- Encabezado ABM -->
<div class="card m-4">
    <div class="card-body">
        <div class="mt-3">
            <div class="row">
                <div class="col-auto me-auto">
                    <h1 class="hover-icon">HISTORIAL DE FICHAJES <i class="fas fa-business-time icon"></i>
                    </h1>
                </div>
                <div class="col-auto">
                    <button class="btn btnImprimir mt-2" onclick="ImprimirTablaFichajes()">
                        <i class="fa-solid fa-download"></i>
                        <span class="btn-text">Imprimir</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tabla -->
<div class="card m-4">
    <div class="card-header">
        <div class="row">
            <div class="col-auto">
                <div class="input-group m-2">
                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-business-time icon"></i></span>
                    <input type="text" id="inputBusqueda" class="form-control inputBusqueda"
                        placeholder="Buscar..." style="text-transform:uppercase">
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
            <table class="table table-striped mt-1" id="imprimir-tabla">
                <thead>
                    <tr>
                        <th scope="col" style="text-align: center">EMPLEADO</th>
                        <th scope="col" style="text-align: center">JORNADA</th>
                        <th scope="col" style="text-align: center">CLIENTE</th>
                        <th scope="col" style="text-align: center">ENTRADA</th>
                        <th scope="col" style="text-align: center">SALIDA</th>
                    </tr>
                </thead>
                <tbody id="tbody-jornadaHistorial"></tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    @* <script src="~/js/fichajesHistorial-1.0.0.js"></script>
    <script src="~/js/impresiones.js"></script> *@
}